rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =========================
    // Helpers
    // =========================

    // Devuelve los datos del usuario autenticado. Si no existe, retorna un objeto vacío.
    function getUserData() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return userDoc.exists() ? userDoc.data : {};
    }

    // Verifica el rol del usuario
    function isRole(role) {
      return getUserData().role == role;
    }

    // Verifica si el usuario pertenece a la empresa
    function isCompanyMember(companyId) {
      return getUserData().companyId == companyId;
    }

    // =========================
    // Users
    // =========================
    match /users/{userId} {
      // Cada usuario solo puede leer/escribir su propio documento
      allow read, write: if request.auth.uid == userId;
    }

    // =========================
    // Companies
    // =========================
    match /companies/{companyId} {
      // Crear empresa: cualquier usuario autenticado
      allow create: if request.auth != null;

      // Lectura: solo miembros
      allow read: if isCompanyMember(companyId);

      // Actualización: solo admins
      allow update: if isCompanyMember(companyId) && isRole('admin');

      // =========================
      // Subcollections
      // =========================

      // Products
      match /products/{productId} {
        allow list, get: if isCompanyMember(companyId);
        allow create, update, delete: if isCompanyMember(companyId) && isRole('admin');
      }

      // Sales
      match /sales/{saleId} {
        allow list, get: if isCompanyMember(companyId);
        allow create: if isCompanyMember(companyId) && (isRole('admin') || isRole('employee'));
        allow update: if isCompanyMember(companyId) && isRole('admin');
        allow delete: if false; // no se puede eliminar desde cliente
      }

      // Aquí puedes agregar más subcolecciones según tu modelo de datos
    }
  }
}
