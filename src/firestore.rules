rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isCompanyMember(companyId) {
      return isSignedIn() && getUserData().companyId == companyId;
    }

    function isRole(role) {
      return isSignedIn() && getUserData().role == role;
    }
    
    // --- Rules ---

    // Root users collection
    match /users/{userId} {
      allow read, create, update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if false;
    }

    // Companies collection
    match /companies/{companyId} {
      allow read: if isCompanyMember(companyId);
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.adminUid;
      allow update: if isRole('admin') && isCompanyMember(companyId);
      allow delete: if false;
    }

    // Products subcollection:
    match /companies/{companyId}/products/{productId} {
      // SOLUCIÓN: Permite a los miembros de la compañía LISTAR la colección.
      allow list: if isCompanyMember(companyId);
      
      // Mantiene la lógica original para OBTENER un solo documento.
      allow get: if isCompanyMember(companyId) && resource.data.initialized != true;

      // Permisos de escritura sin cambios.
      allow create, update, delete: if isRole('admin') && isCompanyMember(companyId);
    }
    
    // Sales subcollection:
    match /companies/{companyId}/sales/{saleId} {
      // SOLUCIÓN: Permite a los miembros de la compañía LISTAR la colección.
      allow list: if isCompanyMember(companyId);

      // Mantiene la lógica original para OBTENER un solo documento.
      allow get: if isCompanyMember(companyId) && resource.data.initialized != true;

      // Permisos de escritura sin cambios.
      allow create: if isCompanyMember(companyId);
      allow update, delete: if isRole('admin') && isCompanyMember(companyId);
    }
  }
}