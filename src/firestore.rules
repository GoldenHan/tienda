rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------
    // Helper Functions
    // ----------------------
    function isAuthenticated() {
      return request.auth != null;
    }

    function isUserInCompany(companyId, uid) {
      return exists(/databases/{database}/documents/companies/$(companyId)/users/$(uid));
    }

    function isEmployee(companyId) {
      return isAuthenticated() && isUserInCompany(companyId, request.auth.uid);
    }

    function isAdmin(companyId) {
      return isEmployee(companyId) &&
        get(/databases/{database}/documents/companies/$(companyId)/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ----------------------
    // Companies Collection
    // ----------------------
    match /companies/{companyId} {
      // Crear empresa: solo usuario autenticado y designado admin
      allow create: if isAuthenticated() && request.resource.data.adminUid == request.auth.uid;

      // Leer empresa: empleados o admin
      allow read: if isEmployee(companyId);

      // Actualizar empresa: solo admin
      allow update: if isAdmin(companyId);

      // ----------------------
      // Subcollection: Products
      // ----------------------
      match /products/{productId} {
        allow read: if isEmployee(companyId);
        allow create, update, delete: if isAdmin(companyId);
      }

      // ----------------------
      // Subcollection: Sales
      // ----------------------
      match /sales/{saleId} {
        allow create: if isEmployee(companyId);
        allow read, update, delete: if isAdmin(companyId);
      }

      // ----------------------
      // Subcollection: Users
      // ----------------------
      match /users/{userId} {
        allow read: if isAdmin(companyId);
        allow create: if isAdmin(companyId) ||
                      (request.auth.uid == userId && request.resource.data.role == 'admin');
        allow update, delete: if isAdmin(companyId);
      }
    }

    // ----------------------
    // Root Users Collection
    // ----------------------
    match /users/{userId} {
      allow read, create, update: if isAuthenticated() && request.auth.uid == userId;
    }

  }
}
