rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    // Function to get the user's data from the /users collection
    function getUser(userId) {
      return get(/databases/$(database)/documents/users/$(userId));
    }
    
    // Checks if the requesting user's companyId matches the one in the path
    function isMemberOfCompany(companyId) {
      return isSignedIn() && getUser(request.auth.uid).data.companyId == companyId;
    }

    // Checks if the user has a specific role ('admin' or 'employee')
    function hasRole(role) {
       return isSignedIn() && getUser(request.auth.uid).data.role == role;
    }

    // --- Rules for collections ---

    // The /users collection stores the role and companyId for each user
    match /users/{userId} {
      // A user can read their own data.
      // An admin of the same company can read other users' data.
      allow read: if (isSignedIn() && request.auth.uid == userId) || 
                  (hasRole('admin') && isMemberOfCompany(getUser(userId).data.companyId));
      
      // A user can create their own document upon registration.
      allow create: if isSignedIn() && request.auth.uid == userId;

      // A user can update their own data.
      allow update: if isSignedIn() && request.auth.uid == userId;

      // Nobody can delete user records for safety.
      allow delete: if false;
    }

    // The /companies collection and its subcollections
    match /companies/{companyId} {
      // Allow creation if the user is signed in (will be associated with user on creation)
      allow create: if isSignedIn();

      // Allow company members to read the main company document.
      allow read, update: if hasRole('admin') && isMemberOfCompany(companyId);
      
      // Nobody can delete a company document for safety.
      allow delete: if false;

      // --- PRODUCTS subcollection ---
      match /products/{productId} {
        // Allow members of the company to list and get products.
        allow list, get: if isMemberOfCompany(companyId);
        
        // Only admins of that company can create, update, or delete products.
        allow create, update, delete: if hasRole('admin') && isMemberOfCompany(companyId);
      }

      // --- SALES subcollection ---
      match /sales/{saleId} {
         // Allow members of the company to list and get sales.
        allow list, get: if isMemberOfCompany(companyId);

        // Any employee or admin of the company can create a sale.
        allow create: if isMemberOfCompany(companyId);

        // Only admins can update or delete sales records.
        allow update, delete: if hasRole('admin') && isMemberOfCompany(companyId);
      }
    }
  }
}
