rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isCompanyMember(companyId) {
      return isSignedIn() && getUserData().companyId == companyId;
    }

    function isRole(role) {
        return isSignedIn() && getUserData().role == role;
    }
    
    // --- Root user lookup table ---
    match /users/{userId} {
      // A user can create their own lookup document during registration
      allow create: if isSignedIn() && request.auth.uid == userId;
      // A user can only read or update their own lookup document
      allow read, update: if isSignedIn() && request.auth.uid == userId;
    }

    // --- Company-specific data ---
    match /companies/{companyId} {
      // A user can create a company document during registration
      allow create: if isSignedIn();
      // Only a member of the company can read the main company document
      allow read: if isCompanyMember(companyId);
       // Only an admin of the company can update the company document
      allow update: if isRole('admin') && isCompanyMember(companyId);

      // --- Sub-collections ---

      // Products sub-collection
      match /products/{productId} {
        // Any company member can read products. Needed for the POS.
        allow read: if isCompanyMember(companyId);
        // Only admins can create, update, or delete products.
        allow create, update, delete: if isRole('admin') && isCompanyMember(companyId);
      }

      // Sales sub-collection
      match /sales/{saleId} {
        // Any company member can read sales. UI will restrict views.
        // This is necessary so the POS doesn't crash for employees.
        allow read: if isCompanyMember(companyId);
        // Any company member can create a sale.
        allow create: if isCompanyMember(companyId);
        // Only admins can update or delete sales history.
        allow update, delete: if isRole('admin') && isCompanyMember(companyId);
      }
      
      // Users sub-collection (for user profiles within a company, not for auth rules)
       match /users/{userId} {
         // Admins can manage user profiles within their company
         allow read, create, update, delete: if isRole('admin') && isCompanyMember(companyId);
      }
    }
  }
}
