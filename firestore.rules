rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      // Returns the data from the user's document in the root /users collection
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isCompanyMember(companyId) {
      // Checks if the user is signed in and their companyId matches
      return isSignedIn() && getUserData().companyId == companyId;
    }

    function isRole(role) {
      // Checks if the user is signed in and has a specific role
      return isSignedIn() && getUserData().role == role;
    }

    // --- Rules for Root Collections ---
    
    // USERS collection: Stores the user's role and companyId. The source of truth for authorization.
    match /users/{userId} {
      // Allow a user to read their own data.
      // Allow creation during the registration process.
      allow read, create: if request.auth.uid == userId;
      // Admins can manage users within their company (future feature).
      allow update, delete: if isRole('admin') && isCompanyMember(getUserData().companyId);
    }

    // COMPANIES collection: Stores basic company info.
    match /companies/{companyId} {
      // Allow creation during registration.
      allow create: if isSignedIn();
      // Allow read/update if the user is an admin of that company.
      allow read, update: if isRole('admin') && isCompanyMember(companyId);
    }
    
    // --- Rules for Company Subcollections ---

    // PRODUCTS subcollection
    match /companies/{companyId}/products/{productId} {
      // Allow any member of the company to read products.
      // The rule now correctly checks if 'initialized' exists before accessing it, preventing errors on empty collections.
      allow read: if isCompanyMember(companyId) && (!('initialized' in resource.data) || resource.data.initialized != true);
      // Only admins can manage the product inventory.
      allow create, update, delete: if isRole('admin') && isCompanyMember(companyId);
    }

    // SALES subcollection
    match /companies/{companyId}/sales/{saleId} {
      // Admins can read all sales. Employees can't read past sales history.
      allow read: if isRole('admin') && isCompanyMember(companyId) && (!('initialized' in resource.data) || resource.data.initialized != true);
      // Any company member (admin or employee) can create a new sale.
      allow create: if isCompanyMember(companyId);
      // Only admins can modify or delete existing sales.
      allow update, delete: if isRole('admin') && isCompanyMember(companyId);
    }
  }
}
