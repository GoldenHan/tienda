rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =========================
    // Helpers
    // =========================

    // Devuelve los datos del usuario autenticado de forma segura
    function getUserData() {
      return (request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)))
             ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data
             : { role: null, companyId: null };
    }

    // Verifica el rol del usuario
    function isRole(role) {
      return getUserData().role == role;
    }

    // Verifica si el usuario pertenece a la empresa
    function isCompanyMember(companyId) {
      return getUserData().companyId == companyId;
    }

    // =========================
    // Users
    // =========================
    match /users/{userId} {
      // Cada usuario solo puede leer/escribir su propio documento
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // =========================
    // Companies
    // =========================
    match /companies/{companyId} {
      // Crear empresa: cualquier usuario autenticado
      allow create: if request.auth != null;

      // Lectura: solo miembros y empresa debe existir
      allow read: if isCompanyMember(companyId) && exists(/databases/$(database)/documents/companies/$(companyId));

      // Actualizaci√≥n: solo admins
      allow update: if isCompanyMember(companyId) && isRole('admin');

      // =========================
      // Subcollections
      // =========================

      // Products
      match /products/{productId} {
        // Listar y obtener solo productos que existen y pertenecen a la empresa
        allow list, get: if isCompanyMember(companyId) &&
                           exists(/databases/$(database)/documents/companies/$(companyId)/products/$(productId));

        // Crear/actualizar/eliminar solo admins
        allow create, update, delete: if isCompanyMember(companyId) && isRole('admin');
      }

      // Sales
      match /sales/{saleId} {
        // Listar y obtener solo ventas que existen y pertenecen a la empresa
        allow list, get: if isCompanyMember(companyId) &&
                           exists(/databases/$(database)/documents/companies/$(companyId)/sales/$(saleId));

        // Crear: admins o empleados
        allow create: if isCompanyMember(companyId) && (isRole('admin') || isRole('employee'));

        // Actualizar: solo admins
        allow update: if isCompanyMember(companyId) && isRole('admin');

        // Eliminar: prohibido desde cliente
        allow delete: if false;
      }
    }
  }
}
