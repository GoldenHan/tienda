rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function getUserData() {
      // Get the requesting user's document from the /users collection
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isCompanyMember(companyId) {
      // Check if the user is signed in and their companyId matches
      return request.auth != null && getUserData().companyId == companyId;
    }

    function isAdmin(companyId) {
      // Check if the user is an admin of the specified company
      return isCompanyMember(companyId) && getUserData().role == 'admin';
    }
    
    function isEmployee(companyId) {
       // Check if the user is an employee (or admin) of the specified company
      return isCompanyMember(companyId) && (getUserData().role == 'employee' || getUserData().role == 'admin');
    }

    // --- Rules for /users collection ---
    match /users/{userId} {
      // Users can read and update their own document.
      // Creation is handled during registration.
      allow read, update: if request.auth.uid == userId;
      // Disallow list and delete for security
      allow list, delete, create: if false;
    }

    // --- Rules for /companies collection and subcollections ---
    match /companies/{companyId} {
      // An admin can create, read, or update their own company document.
      allow read, update: if isAdmin(companyId);
      // Disallow list to prevent users from seeing all companies.
      allow list, create, delete: if false;

      // --- Rules for /products subcollection ---
      match /products/{productId} {
        // Employees/Admins can list and get products for their company.
        allow list, get: if isCompanyMember(companyId);
        // Only Admins can create, update, or delete products.
        allow create, update, delete: if isAdmin(companyId);
      }

      // --- Rules for /sales subcollection ---
      match /sales/{saleId} {
        // Employees/Admins can list and get sales for their company.
        allow list, get: if isCompanyMember(companyId);
        // Any employee or admin can create a new sale.
        allow create: if isEmployee(companyId);
        // Only admins can update (edit) past sales.
        allow update: if isAdmin(companyId);
        // Deleting sales is not allowed for data integrity.
        allow delete: if false;
      }
    }
  }
}
