rules_version = '2';

service cloud.firestore {
  match /databases/tienda/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isUserInCompany(companyId, uid) {
      return exists(/databases/$(database)/documents/companies/$(companyId)/users/$(uid));
    }

    function isCompanyAdmin(companyId, uid) {
      let userRole = get(/databases/$(database)/documents/companies/$(companyId)/users/$(uid)).data.role;
      return userRole == 'admin';
    }

    match /companies/{companyId} {
      allow read: if isAuthenticated() && isUserInCompany(companyId, request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.adminUid == request.auth.uid;
      
      match /products/{productId} {
        allow read: if isAuthenticated() && isUserInCompany(companyId, request.auth.uid);
        allow write: if isAuthenticated() && isCompanyAdmin(companyId, request.auth.uid);
      }
      
      match /sales/{saleId} {
        allow read: if isAuthenticated() && isUserInCompany(companyId, request.auth.uid);
        allow write: if isAuthenticated() && isCompanyAdmin(companyId, request.auth.uid);
      }

      match /users/{userId} {
        allow read, write: if isAuthenticated() && isCompanyAdmin(companyId, request.auth.uid);
        allow create: if isAuthenticated() && request.auth.uid == userId && request.resource.data.role == 'employee';
      }
    }

    match /users/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow create: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}
