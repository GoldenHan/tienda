rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    // Function to get user data from the /users collection.
    // IMPORTANT: This can only be used in 'read' rules, not 'write' rules.
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Checks if the requesting user belongs to the company specified in the path.
    function isCompanyMember(companyId) {
      return isSignedIn() && getUserData().companyId == companyId;
    }
    
    // Checks if the user has a specific role.
    function hasRole(role) {
      return isSignedIn() && getUserData().role == role;
    }

    // --- USERS Collection ---
    // Rules for the root /users collection where roles and company associations are stored.
    match /users/{userId} {
      // A user can create their own document.
      allow create: if isSignedIn() && request.auth.uid == userId;
      
      // A user can only read their own document.
      allow read: if isSignedIn() && request.auth.uid == userId;
      
      // A user can only update their own document.
      allow update: if isSignedIn() && request.auth.uid == userId;
      
      // No one can delete a user document through client-side requests.
      allow delete: if false;
    }

    // --- COMPANIES Collection ---
    match /companies/{companyId} {
      // READ: Any authenticated member of the company can read the company's main document.
      allow read: if isCompanyMember(companyId);

      // CREATE: A user can create a company document if they are signed in
      // and they are setting themselves as the admin.
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.adminUid;

      // UPDATE: Only an admin of that company can update the company document.
      allow update: if hasRole('admin') && isCompanyMember(companyId);
      
      // DELETE: Companies cannot be deleted from the client.
      allow delete: if false;

      // --- PRODUCTS Subcollection ---
      match /products/{productId} {
        // READ (LIST): Any authenticated user of the company can list all products.
        allow list: if isCompanyMember(companyId);

        // READ (GET): Any authenticated user of the company can get a single product.
        allow get: if isCompanyMember(companyId);

        // WRITE (CREATE, UPDATE, DELETE): Only admins of the company can manage products.
        // These rules do NOT use get() and are valid for write operations.
        allow create, update, delete: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }

      // --- SALES Subcollection ---
      match /sales/{saleId} {
        // READ (LIST, GET): Any authenticated member of the company can read sales data.
        // The UI will handle who sees what (e.g., only admins see the full history page).
        allow read: if isCompanyMember(companyId);

        // CREATE: Any authenticated user of the company can create a sale (e.g., from the POS).
        allow create: if isCompanyMember(companyId);

        // UPDATE, DELETE: Only admins can modify or delete sales records.
        allow update, delete: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }
    }
  }
}
