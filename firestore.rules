
rules_version = '2';

service cloud.firestore {
  match /databases/tienda/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isUserInCompany(companyId, userId) {
      return exists(/databases/$(database)/documents/companies/$(companyId)/users/$(userId));
    }
    
    function isCompanyAdmin(companyId, userId) {
        let userDoc = get(/databases/$(database)/documents/companies/$(companyId)/users/$(userId));
        return userDoc.data.role == 'admin';
    }

    match /companies/{companyId} {
      // Allow a user to create a company document only if they set themselves as the admin.
      allow create: if isAuthenticated() && request.resource.data.adminUid == request.auth.uid;
      
      // Allow a user to read a company document if they are an employee of that company.
      allow read: if isUserInCompany(companyId, request.auth.uid);
      
      allow update, delete: if isCompanyAdmin(companyId, request.auth.uid);

      match /users/{userId} {
        // Allow a user to create their own user document within a company.
        allow create: if isAuthenticated() && request.auth.uid == userId;
        
        // Allow reading/deleting user docs only by admins of the company.
        allow read, delete: if isCompanyAdmin(companyId, request.auth.uid);
        
        // Allow a user to update their own document, or an admin to update any user document.
        allow update: if (isAuthenticated() && request.auth.uid == userId) || isCompanyAdmin(companyId, request.auth.uid);
      }

      match /products/{productId} {
        allow read, create, update, delete: if isCompanyAdmin(companyId, request.auth.uid);
        // Employees can also read products for the POS
        allow read: if isUserInCompany(companyId, request.auth.uid);
      }

      match /sales/{saleId} {
         // Admins can do anything with sales
        allow read, create, update, delete: if isCompanyAdmin(companyId, request.auth.uid);
        
        // Employees can create sales (from POS) and read them.
        allow create, read: if isUserInCompany(companyId, request.auth.uid);
      }
    }
  }
}
