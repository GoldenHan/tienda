
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helpers
    function isMemberOfCompany(companyId) {
      return request.auth != null && request.auth.token.companyId == companyId;
    }

    function isAdminOfCompany(companyId) {
      return isMemberOfCompany(companyId) && (request.auth.token.role == 'admin' || request.auth.token.role == 'primary-admin');
    }
    
    function isPrimaryAdminOfCompany(companyId) {
      return isMemberOfCompany(companyId) && request.auth.token.role == 'primary-admin';
    }

    // Reglas para la colección 'companies'
    match /companies/{companyId} {
      allow read: if isMemberOfCompany(companyId);
      allow update: if isPrimaryAdminOfCompany(companyId);
      allow create: if false; // Nadie puede crear empresas directamente, se hace desde el backend
      allow delete: if false; // Nadie puede borrar empresas
    }

    // Reglas para subcolecciones de una empresa
    match /companies/{companyId}/{document=**} {
      allow read: if isMemberOfCompany(companyId);
      allow write: if isAdminOfCompany(companyId);
    }
    
    // Reglas para la colección 'users'
    match /users/{userId} {
      // Un usuario siempre puede leer y escribir su propio documento.
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Un administrador puede leer la lista de usuarios de su empresa.
      allow list: if isAdminOfCompany(request.auth.token.companyId) && 
                      request.query.where[0][0] == 'companyId' && 
                      request.query.where[0][2] == request.auth.token.companyId;

      // Un administrador puede leer los datos de otro usuario de su empresa.
      allow get: if isAdminOfCompany(request.auth.token.companyId);

      // Los administradores pueden actualizar el rol de otros usuarios.
      allow update: if isAdminOfCompany(request.auth.token.companyId) && 'role' in request.resource.data;
    }
  }
}
