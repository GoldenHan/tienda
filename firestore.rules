rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------
    // Helpers
    // --------------------------
    function isAuthenticated() {
      return request.auth != null;
    }

    function isUserInCompany(companyId, userId) {
      return exists(/databases/$(database)/documents/companies/$(companyId)/users/$(userId));
    }

    function getUserData(companyId, userId) {
      return get(/databases/$(database)/documents/companies/$(companyId)/users/$(userId)).data;
    }

    function isAdmin(companyId) {
      return isAuthenticated() && isUserInCompany(companyId, request.auth.uid) && getUserData(companyId, request.auth.uid).role == 'admin';
    }

    function isEmployee(companyId) {
      return isAuthenticated() && isUserInCompany(companyId, request.auth.uid);
    }
    
    // --------------------------
    // Root Users collection (for company lookup)
    // --------------------------
    match /users/{userId} {
        // Allow a user to create their own lookup document during registration
        allow create: if request.auth.uid == userId;
        // Allow a user to read their own lookup document to find their company
        allow read: if request.auth.uid == userId;
        
        allow update, delete: if false; // Lookup doc should not be changed
    }

    // --------------------------
    // Companies collection
    // --------------------------
    match /companies/{companyId} {

      // Allow creating a company if the user is authenticated and sets themselves as the admin.
      allow create: if isAuthenticated() && request.resource.data.adminUid == request.auth.uid;

      // Allow reading company data if you are an employee of that company.
      allow read: if isEmployee(companyId);

      // Only an admin of that company can update its details.
      allow update: if isAdmin(companyId);

      // Deleting companies is not allowed.
      allow delete: if false;

      // --------------------------
      // Users subcollection
      // --------------------------
      match /users/{userId} {
        // Allow creation if:
        // 1. A user is creating their own "admin" profile during company setup.
        // 2. An existing admin is adding a new employee.
        allow create: if (request.auth.uid == userId && request.resource.data.role == 'admin') || isAdmin(companyId);

        // All employees of a company can read user profiles within that company.
        allow read: if isEmployee(companyId);

        // An admin can update any profile, or a user can update their own.
        allow update: if isAdmin(companyId) || request.auth.uid == userId;

        // An admin can delete any user except themselves.
        allow delete: if isAdmin(companyId) && request.auth.uid != userId;
      }

      // --------------------------
      // Products subcollection
      // --------------------------
      match /products/{productId} {
        allow read: if isEmployee(companyId);
        allow create, update, delete: if isAdmin(companyId);
      }

      // --------------------------
      // Sales subcollection
      // --------------------------
      match /sales/{saleId} {
        allow read: if isEmployee(companyId);
        allow create: if isEmployee(companyId);
        allow update, delete: if isAdmin(companyId);
      }
    }
  }
}
