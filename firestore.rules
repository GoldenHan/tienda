rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user has the 'admin' role.
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if a sale transaction is being performed.
    // This checks that only the 'quantity' field is being changed.
    function isStockUpdate() {
      let incomingKeys = request.resource.data.keys();
      let existingKeys = resource.data.keys();
      // Ensure only known fields are being written and 'quantity' is one of them.
      return incomingKeys.hasAll(existingKeys) &&
             existingKeys.hasAll(incomingKeys) &&
             // Only the quantity can be different.
             request.resource.data.name == resource.data.name &&
             request.resource.data.description == resource.data.description &&
             request.resource.data.purchaseCost == resource.data.purchaseCost &&
             request.resource.data.salePrice == resource.data.salePrice &&
             request.resource.data.lowStockThreshold == resource.data.lowStockThreshold &&
             request.resource.data.imageUrl == resource.data.imageUrl &&
             request.resource.data.imageHint == resource.data.imageHint;
    }

    // Products collection rules
    match /products/{productId} {
      // Any authenticated user can read products (needed for POS).
      allow read: if request.auth != null;
      
      // Admins can create and delete products.
      allow create, delete: if isAdmin();
      
      // Update permissions are more complex:
      // - Admins can update anything.
      // - Authenticated users (employees) can ONLY update a product's quantity as part of a sale.
      allow update: if isAdmin() || (request.auth != null && isStockUpdate());
    }

    // Sales collection rules
    match /sales/{saleId} {
      // Any authenticated user can create sales.
      allow create: if request.auth != null;
      
      // Only admins can read, update, or delete past sales.
      allow read, update, delete: if isAdmin();
    }

    // Users collection rules
    match /users/{userId} {
      // A user can read or update their own document.
      allow read, update: if request.auth != null && request.auth.uid == userId;
      
      // A new user can create their own document upon registration.
      allow create: if request.auth != null;
    }
  }
}
