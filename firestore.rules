
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow reading company info for registration check, even if not authenticated.
    match /company/main {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Secure all other collections.
    // Users must be authenticated to read or write.
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    match /products/{productId} {
      allow read, write: if request.auth != null;
    }
    
    match /categories/{categoryId} {
      allow read, write: if request.auth != null;
    }

    match /sales/{saleId} {
      allow read, write: if request.auth != null;
    }

    match /cash_outflows/{outflowId} {
      allow read, write: if request.auth != null;
    }

    match /inflows/{inflowId} {
      allow read, write: if request.auth != null;
    }

    match /reconciliations/{reconId} {
      allow read, write: if request.auth != null;
    }
  }
}
