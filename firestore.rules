
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isCompanyMember(companyId) {
      return isSignedIn() && getUserData().companyId == companyId;
    }

    function isRole(role) {
      return isSignedIn() && getUserData().role == role;
    }

    // --- Rules ---

    // /users/{userId} - Root collection for user roles and company mapping
    match /users/{userId} {
      // A user can read their own data to know their role and company.
      allow read: if isSignedIn() && request.auth.uid == userId;
      // A new user can create their own document during sign-up.
      allow create: if isSignedIn() && request.auth.uid == userId;
      // Allow users to update their own data (e.g. profile changes).
      allow update: if isSignedIn() && request.auth.uid == userId;
       // Deleting user documents is a sensitive operation, disable for now.
      allow delete: if false;
    }

    // /companies/{companyId} - Main collection for all company data.
    match /companies/{companyId} {
      // A user can read their own company's document.
      allow read: if isCompanyMember(companyId);
      // Anyone signed in can create a company (during registration).
      // Security is enforced by the client ensuring the adminUid is correct.
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.adminUid;
      // Only an admin of that company can update company details.
      allow update: if isRole('admin') && isCompanyMember(companyId);
       // Deleting company documents is a sensitive operation, disable for now.
      allow delete: if false;

      // --- Subcollections ---

      // Products subcollection
      match /products/{productId} {
        // Any member of the company can view the product list.
        allow list: if isCompanyMember(companyId);
        // Any member of the company can read a single product.
        allow get: if isCompanyMember(companyId);
        // Only admins can create, update, or delete products.
        allow create, update, delete: if isRole('admin') && isCompanyMember(companyId);
      }
      
      // Sales subcollection
      match /sales/{saleId} {
        // Any member of the company can view sales history (UI will restrict based on role).
        allow list: if isCompanyMember(companyId);
         // Any member of the company can read a single sale.
        allow get: if isCompanyMember(companyId);
        // Any member of the company can create a new sale (e.g., from POS).
        allow create: if isCompanyMember(companyId);
        // Only admins can update or delete sales records.
        allow update, delete: if isRole('admin') && isCompanyMember(companyId);
      }
    }
  }
}
