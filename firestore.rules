rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read access to company info for registration check
    match /company/{companyId} {
      allow read: if true;
    }

    // Secure all other collections: only authenticated users can read/write
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
