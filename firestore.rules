rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------
    // Funciones de ayuda
    // -------------------
    function isMemberOfCompany(companyId) {
      return request.auth != null && request.auth.token.companyId == companyId;
    }

    function isAdmin() {
      return request.auth != null && (request.auth.token.role == 'admin' || request.auth.token.role == 'primary-admin');
    }

    function isEmployee() {
      return request.auth != null && request.auth.token.role == 'employee';
    }

    // -------------------
    // Colección de empresas (Registro)
    // -------------------
    // Permitir crear la compañía solo si no existe ninguna.
    match /companies/{companyId} {
      allow create: if !exists(/databases/$(database)/documents/companies/$(companyId));
      allow read, update, delete: if false; // No se puede leer ni modificar directamente después
    }

    // -------------------
    // Colección de usuarios
    // -------------------
    match /users/{userId} {
      // El usuario puede leer su propio documento
      allow get: if request.auth != null && request.auth.uid == userId;

      // El usuario puede actualizar su propia contraseña (no se maneja aquí, sino en la app)
      // La creación de usuarios se hace con funciones de admin, así que se restringe aquí
      allow create, update, delete, list: if false;
    }

     // -------------------
    // REGLAS GENERALES PARA SUBCOLECCIONES DE LA EMPRESA
    // -------------------
    match /companies/{companyId}/{collection}/{docId} {
      // 1. Los administradores pueden hacer todo dentro de su empresa
      allow read, write: if isAdmin() && isMemberOfCompany(companyId);

      // 2. Los empleados tienen permisos específicos y limitados
      // Empleados pueden LEER productos y categorías
      allow read: if isEmployee() && isMemberOfCompany(companyId) && (collection == 'products' || collection == 'categories');

      // Empleados pueden CREAR ventas
      allow create: if isEmployee() && isMemberOfCompany(companyId) && collection == 'sales';
    }
  }
}
