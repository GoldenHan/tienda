rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isRole(role) {
      return isSignedIn() && getUserData().role == role;
    }

    function isCompanyMember(companyId) {
       return isSignedIn() && getUserData().companyId == companyId;
    }
    
    // USERS:
    // - Anyone can create their own user document during sign-up.
    // - Users can read their own document.
    // - Admins can create new users (employees) for their company.
    // - Admins can read all users within their company.
    match /users/{userId} {
      allow create: if isSignedIn(); // Allows new user registration
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow write: if isRole('admin'); // Admins can modify users
    }

    // COMPANIES:
    // - Authenticated users can create a company (part of registration).
    // - Company members can read their own company's document.
    // - Admins of the company can update it.
    match /companies/{companyId} {
      allow create: if isSignedIn();
      allow read: if isCompanyMember(companyId);
      allow update: if isRole('admin') && isCompanyMember(companyId);

      // SUBCOLLECTIONS
      
      // PRODUCTS:
      // - Company members can read products.
      // - Admins can create, update, and delete products.
      match /products/{productId} {
        // Exclude placeholder from read/write rules for regular users
        allow read: if isCompanyMember(companyId) && resource.data.initialized != true;
        allow write: if isRole('admin') && isCompanyMember(companyId);
        allow create: if isRole('admin') && isCompanyMember(companyId); // Explicit create
      }
      
      // SALES:
      // - Admins can read all sales. Employees can only create them.
      // - Any company member can create a sale (i.e., from the POS).
      // - Admins can update/delete sales records.
      match /sales/{saleId} {
        allow read: if isRole('admin') && isCompanyMember(companyId) && resource.data.initialized != true;
        allow create: if isCompanyMember(companyId);
        allow update, delete: if isRole('admin') && isCompanyMember(companyId);
      }

      // Placeholder documents for initializing collections
      match /products/_placeholder {
        allow write: if isSignedIn();
      }
      match /sales/_placeholder {
        allow write: if isSignedIn();
      }
    }
  }
}
