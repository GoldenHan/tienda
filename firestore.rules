rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read for the single company document to check for initial setup.
    // This is secure because it only reveals the existence of the company, not its data.
    match /company/main {
      allow get: if true;
      // Writing to the company document still requires authentication.
      allow write: if request.auth != null;
    }

    // All other documents require the user to be authenticated.
    match /{path=**}/ {
      allow read, write: if request.auth != null;
    }
  }
}
