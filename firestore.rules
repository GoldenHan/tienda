rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isCompanyMember(companyId) {
      return isSignedIn() && getUserData().companyId == companyId;
    }

    function isRole(role) {
        return isSignedIn() && getUserData().role == role;
    }
    
    // --- Users Collection ---
    // This collection stores a lookup document for each user to define their role and company.
    match /users/{userId} {
      // Allow users to read their own lookup document.
      allow read: if isSignedIn() && request.auth.uid == userId;
      // Allow a user to create their own lookup document during signup.
      allow create: if isSignedIn() && request.auth.uid == userId;
    }

    // --- Companies Collection ---
    match /companies/{companyId} {
      // Allow any signed-in user to create a new company. The client-side logic
      // during registration will handle creating the associated user document.
      allow create: if isSignedIn();

      // Only members of the company can read the main company document.
      allow read: if isCompanyMember(companyId);

      // Only admins can update the company document.
      allow update: if isCompanyMember(companyId) && isRole('admin');

      // --- Products Subcollection ---
      match /products/{productId} {
        // Any company member can read products.
        allow read: if isCompanyMember(companyId);

        // Only admins can create, update, or delete products.
        allow create, update, delete: if isCompanyMember(companyId) && isRole('admin');
      }

      // --- Sales Subcollection ---
      match /sales/{saleId} {
        // Any company member (admin or employee) can create a sale.
        allow create: if isCompanyMember(companyId);

        // Only admins can read, update, or delete sales history.
        allow read, update, delete: if isCompanyMember(companyId) && isRole('admin');
      }
    }
  }
}
