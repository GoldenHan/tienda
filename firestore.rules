rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isCompanyMember(companyId) {
      return isSignedIn() && getUserData().companyId == companyId;
    }

    function isRole(role) {
      return isSignedIn() && getUserData().role == role;
    }
    
    // --- Rules ---

    // La colección /users almacena el rol y companyId de cada usuario.
    match /users/{userId} {
      // Un usuario solo puede leer, crear o actualizar su propio documento.
      allow read, update, create: if isSignedIn() && request.auth.uid == userId;
      // Nadie puede borrar documentos de usuario para mantener la integridad.
      allow delete: if false;
    }

    // La colección /companies almacena la información de cada empresa.
    match /companies/{companyId} {
      // Un usuario puede leer el documento de su propia empresa.
      allow read: if isCompanyMember(companyId);

      // La creación de empresas se gestiona desde el código de registro (se permite si el usuario está autenticado).
      allow create: if isSignedIn();
      
      // Solo un admin de esa empresa puede actualizar los datos de la empresa.
      allow update: if isRole('admin') && isCompanyMember(companyId);

      // Nadie puede borrar empresas directamente.
      allow delete: if false;

      // --- Subcolección de Productos ---
      match /products/{productId} {
        // Permite a cualquier miembro de la compañía listar los productos.
        allow list: if isCompanyMember(companyId);

        // Permite a cualquier miembro de la compañía leer un producto específico.
        allow get: if isCompanyMember(companyId);
        
        // Solo los admins pueden crear, actualizar o borrar productos.
        allow create, update, delete: if isRole('admin') && isCompanyMember(companyId);
      }
      
      // --- Subcolección de Ventas ---
      match /sales/{saleId} {
        // Permite a cualquier miembro de la compañía listar las ventas (la UI ya restringe la vista).
        allow list: if isCompanyMember(companyId);
        
        // Permite a cualquier miembro de la compañía leer una venta específica.
        allow get: if isCompanyMember(companyId);
        
        // Cualquier miembro de la compañía puede registrar (crear) una venta.
        allow create: if isCompanyMember(companyId);

        // Solo los admins pueden actualizar o borrar el historial de ventas.
        allow update, delete: if isRole('admin') && isCompanyMember(companyId);
      }
    }
  }
}
