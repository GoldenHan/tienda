rules_version = '2';

service cloud.firestore {
  match /databases/tienda/documents {

    // --------------------------
    // Helpers
    // --------------------------
    function isAuthenticated() {
      return request.auth != null;
    }

    function isUserInCompany(companyId, userId) {
      return exists(/databases/tienda/documents/companies/$(companyId)/users/$(userId));
    }

    function getUserData(companyId, userId) {
      return get(/databases/tienda/documents/companies/$(companyId)/users/$(userId)).data;
    }

    function isAdmin(companyId) {
      // Check if user is authenticated, exists in the company, and their role is 'admin'
      return isAuthenticated() && 
             isUserInCompany(companyId, request.auth.uid) && 
             getUserData(companyId, request.auth.uid).role == 'admin';
    }

    function isEmployee(companyId) {
      // Any user document in the subcollection is considered an employee
      return isAuthenticated() && isUserInCompany(companyId, request.auth.uid);
    }
    
    // --------------------------
    // Root `users` collection for company lookup
    // --------------------------
    match /users/{userId} {
       // A user can create their own lookup document.
       // A user can read their own lookup document.
       // No one can list all documents.
       allow read, create: if isAuthenticated() && request.auth.uid == userId;
       allow update, delete: if false; // Lookup document should not be changed.
    }


    // --------------------------
    // `companies` collection and subcollections
    // --------------------------
    match /companies/{companyId} {

      // A user can create a company if they are authenticated and they set themselves as the admin.
      allow create: if isAuthenticated() && request.resource.data.adminUid == request.auth.uid;
      
      // An employee can read their own company's document.
      allow read: if isEmployee(companyId);

      // Only an admin can update company info (e.g., name).
      allow update: if isAdmin(companyId);

      // Prevent company deletion for safety.
      allow delete: if false;

      // --------------------------
      // `users` subcollection
      // --------------------------
      match /users/{userId} {
        // Allow creating a user if:
        // 1. A user is creating their own account as the first admin.
        // 2. An existing admin is creating a new user (employee).
        allow create: if (isAuthenticated() && request.auth.uid == userId && request.resource.data.role == 'admin') || isAdmin(companyId);
        
        // Employees can read user profiles within their own company.
        allow read: if isEmployee(companyId);

        // An admin can update any user, or a user can update their own profile.
        allow update: if isAdmin(companyId) || (isAuthenticated() && request.auth.uid == userId);

        // An admin can delete any user except themselves.
        allow delete: if isAdmin(companyId) && request.auth.uid != userId;
      }

      // --------------------------
      // `products` subcollection
      // --------------------------
      match /products/{productId} {
        allow read: if isEmployee(companyId);
        allow create, update, delete: if isAdmin(companyId);
      }

      // --------------------------
      // `sales` subcollection
      // --------------------------
      match /sales/{saleId} {
        // Any employee can read sales history and create new sales (for POS).
        allow read, create: if isEmployee(companyId);
        // Only admins can modify or delete sales records.
        allow update, delete: if isAdmin(companyId);
      }
    }
  }
}
