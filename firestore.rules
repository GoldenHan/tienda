
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Function to get the user's role and companyId from the root /users collection
    function getUserAuthData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // COMPANY
    // Allow a user to read their own company document.
    // Allow any authenticated user to create a company (during registration).
    match /companies/{companyId} {
      allow read: if request.auth != null && getUserAuthData().companyId == companyId;
      allow create: if request.auth != null; 
      allow update, delete: if request.auth != null && getUserAuthData().companyId == companyId && getUserAuthData().role == 'admin';
    }

    // PRODUCTS
    // Allow read if the user belongs to the company.
    // Allow write if the user belongs to the company AND is an admin.
    match /companies/{companyId}/products/{productId} {
      allow read: if request.auth != null && getUserAuthData().companyId == companyId;
      allow create, update, delete: if request.auth != null && getUserAuthData().companyId == companyId && getUserAuthData().role == 'admin';
    }

    // SALES
    // Allow read if the user belongs to the company.
    // Allow write (create/update) if the user is part of the company (admin or employee).
    match /companies/{companyId}/sales/{saleId} {
      allow read: if request.auth != null && getUserAuthData().companyId == companyId;
      allow create, update: if request.auth != null && getUserAuthData().companyId == companyId;
      allow delete: if request.auth != null && getUserAuthData().companyId == companyId && getUserAuthData().role == 'admin';
    }

    // USERS (root collection)
    // This collection is the source of truth for authorization.
    // A user can create their own user document (on signup).
    // A user can only read their own document.
    // An admin can create new user documents (add employees).
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow create: if request.auth != null; // Allows signup and admin adding employees
      allow update: if request.auth.uid == userId; // Allow user to update their own info if needed later
      allow delete: if getUserAuthData().role == 'admin'; // Only admins can delete users
    }
  }
}
