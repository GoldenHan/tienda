
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite el acceso de lectura y escritura a las colecciones a cualquier usuario autenticado.
    // Esto no se recomienda para producción, pero es adecuado para la creación de prototipos.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /products/{productId} {
      allow read, write: if request.auth != null;
    }
    match /sales/{saleId} {
      allow read, write: if request.auth != null;
    }
  }
}
