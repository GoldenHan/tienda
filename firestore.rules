
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow anyone (unauthenticated users) to check if the company doc exists.
    // This is required for the registration page to work correctly.
    match /company/main {
      allow get: if true;
      allow write: if request.auth != null; // Only authenticated users can write/create
    }
    
    // For all other documents, require authentication for any access.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
