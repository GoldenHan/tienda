rules_version = '2';

service cloud.firestore {
  match /databases/tienda/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isUserInCompany(companyId, userId) {
      return exists(/databases/$(database)/documents/companies/$(companyId)/users/$(userId));
    }
    
    // Allow users to read their own company lookup document
    match /users/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow create: if isAuthenticated() && request.auth.uid == userId;
    }

    match /companies/{companyId} {
      // Allow a user to create a company if they are authenticated and they set themselves as the admin
      allow create: if isAuthenticated() && request.resource.data.adminUid == request.auth.uid;
      
      // Allow a user to read a company's data if they are an employee of that company
      allow read: if isUserInCompany(companyId, request.auth.uid);
      allow update, delete: if isUserInCompany(companyId, request.auth.uid) && get(/databases/$(database)/documents/companies/$(companyId)/users/$(request.auth.uid)).data.role == 'admin';

      match /products/{productId} {
        allow read: if isUserInCompany(companyId, request.auth.uid);
        allow create, update, delete: if isUserInCompany(companyId, request.auth.uid) && get(/databases/$(database)/documents/companies/$(companyId)/users/$(request.auth.uid)).data.role == 'admin';
      }

      match /sales/{saleId} {
        allow read: if isUserInCompany(companyId, request.auth.uid);
        // Allow employees to create sales, but only admins can edit/delete
        allow create: if isUserInCompany(companyId, request.auth.uid);
        allow update, delete: if isUserInCompany(companyId, request.auth.uid) && get(/databases/$(database)/documents/companies/$(companyId)/users/$(request.auth.uid)).data.role == 'admin';
      }

      match /users/{userId} {
        // Allow an authenticated user to create their OWN user document with the 'admin' role
        allow create: if isAuthenticated() && request.auth.uid == userId && request.resource.data.role == 'admin';
        
        // Allow admins to create other user documents (employees)
        allow create: if isUserInCompany(companyId, request.auth.uid) && get(/databases/$(database)/documents/companies/$(companyId)/users/$(request.auth.uid)).data.role == 'admin';

        allow read: if isUserInCompany(companyId, request.auth.uid);
        allow update, delete: if isUserInCompany(companyId, request.auth.uid) && get(/databases/$(database)/documents/companies/$(companyId)/users/$(request.auth.uid)).data.role == 'admin';
      }
    }
  }
}
