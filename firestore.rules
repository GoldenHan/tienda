rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    // Function to get the user's data from the /users collection
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Function to check if a user belongs to a specific company
    function isCompanyMember(companyId) {
      return isSignedIn() && getUserData().companyId == companyId;
    }

    // Function to check if a user has a specific role
    function isRole(role) {
      return isSignedIn() && getUserData().role == role;
    }

    // --- Rules ---

    // /users/{userId}
    // Users can create and read their own user document.
    match /users/{userId} {
      allow read, create, update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if false; // Prevent users from deleting their own account record
    }

    // /companies/{companyId}
    // Company documents can be read by their members and updated by admins.
    match /companies/{companyId} {
      allow read: if isCompanyMember(companyId);
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.adminUid;
      allow update: if isRole('admin') && isCompanyMember(companyId);
      allow delete: if false; // Prevent companies from being deleted

      // /companies/{companyId}/products/{productId}
      match /products/{productId} {
        // Allow any member of the company to list the products
        allow list: if isCompanyMember(companyId);
        // Allow any member of the company to get a specific product
        allow get: if isCompanyMember(companyId);
        // Only admins can create, update, or delete products
        allow create, update, delete: if isRole('admin') && isCompanyMember(companyId);
      }

      // /companies/{companyId}/sales/{saleId}
      match /sales/{saleId} {
        // Allow any member of the company to list sales
        allow list: if isCompanyMember(companyId);
        // Allow any member of the company to get a specific sale
        allow get: if isCompanyMember(companyId);
        // Any member of the company can create a sale
        allow create: if isCompanyMember(companyId);
        // Only admins can update or delete sales records
        allow update, delete: if isRole('admin') && isCompanyMember(companyId);
      }
    }
  }
}
