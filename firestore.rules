rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the requesting user is an admin.
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users can read/update their own document. Only admins can create new users (implicitly via auth).
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if isAdmin(); // Or allow anyone to create their own user doc on signup.
      allow list, delete: if isAdmin();
    }
    
    // Products: Admins can write. Any authenticated user can read.
    match /products/{productId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }

    // Sales: Admins can write. Any authenticated user can read.
    match /sales/{saleId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }
  }
}
