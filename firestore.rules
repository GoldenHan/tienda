rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Por defecto, denegar todas las lecturas y escrituras
    match /{document=**} {
      allow read, write: if false;
    }

    // Permitir a los usuarios autenticados leer su propio perfil de usuario
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // La escritura de perfiles solo se permite desde el servidor (server actions)
    }
    
    // Permitir a los miembros de una empresa leer documentos dentro del path de su empresa
    match /companies/{companyId}/{document=**} {
      allow read: if isMemberOfCompany(companyId);
    }

    // Permitir a los administradores escribir en la mayoría de las colecciones de su empresa
    // Las reglas más específicas para colecciones concretas pueden anular esta
    match /companies/{companyId}/{collect}/{docId} {
      allow write: if isAdminOfCompany(companyId);
    }
    
    // FUNCIONES HELPER BASADAS EN CUSTOM CLAIMS (MÁS EFICIENTES)

    // Devuelve true si el usuario está autenticado y su claim 'companyId' coincide
    function isMemberOfCompany(companyId) {
      return request.auth != null && request.auth.token.companyId == companyId;
    }
    
    // Devuelve true si el usuario es miembro y su claim 'role' es admin o primary-admin
    function isAdminOfCompany(companyId) {
      return isMemberOfCompany(companyId) && (request.auth.token.role == 'admin' || request.auth.token.role == 'primary-admin');
    }
  }
}
