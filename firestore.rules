
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to check if setup is needed, but only for listing.
    match /companies/{companyId} {
      allow list: if true;
      allow read, write: if request.auth != null && request.auth.token.companyId == companyId && request.auth.token.role == 'admin';

      // Allow access to subcollections for authenticated users of the same company
      match /{subcollection}/{docId} {
        allow read, write: if request.auth != null && request.auth.token.companyId == companyId;
      }
    }

    match /users/{userId} {
      // Allow a user to read their own document.
      allow get: if request.auth != null && request.auth.uid == userId;
      // Allow admins of the same company to list all users.
      allow list: if request.auth != null && request.auth.token.role == 'admin';
      // Allow admins to create/update users.
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }
  }
}
