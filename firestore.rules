rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isCompanyMember(companyId) {
      return request.auth != null && getUserData().companyId == companyId;
    }

    function isRole(role) {
      return request.auth != null && getUserData().role == role;
    }

    // --- Rules ---

    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Companies collection
    match /companies/{companyId} {
      allow read: if isCompanyMember(companyId);
      allow create: if request.auth.uid == request.resource.data.adminUid;
    }
    
    // Products Subcollection
    match /companies/{companyId}/products/{productId} {
      allow read: if isCompanyMember(companyId) && (!('initialized' in resource.data) || resource.data.initialized != true);
      allow create, update, delete: if isRole('admin') && isCompanyMember(companyId);
    }
    
    // Sales Subcollection
    match /companies/{companyId}/sales/{saleId} {
      allow read: if isCompanyMember(companyId) && (!('initialized' in resource.data) || resource.data.initialized != true);
      allow create: if isCompanyMember(companyId);
      allow update, delete: if isRole('admin') && isCompanyMember(companyId);
    }
    
    // Users Subcollection (within companies)
    // This is for user profiles specific to a company
    match /companies/{companyId}/users/{userId} {
      allow read: if isCompanyMember(companyId);
      allow create: if isRole('admin') && isCompanyMember(companyId); // Admins can create new user profiles in their company
      allow update: if (isRole('admin') && isCompanyMember(companyId)) || (request.auth.uid == userId && isCompanyMember(companyId)); // Admins or the user themselves can update
    }

    // Root Users Collection (for role and company lookup)
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isRole('admin');
      allow create: if request.auth.uid == userId; // Allow user to create their own user lookup document on signup
    }
  }
}
