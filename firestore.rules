rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      // Lee los datos del documento del usuario que realiza la solicitud.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isCompanyMember(companyId) {
      // Verifica si el companyId del usuario coincide con el companyId de la ruta.
      return isSignedIn() && getUserData().companyId == companyId;
    }

    function isAdmin() {
      // Verifica si el rol del usuario es 'admin'.
      return isSignedIn() && getUserData().role == "admin";
    }

    // --- Rules ---

    // Colección de usuarios (/users/{userId})
    // Un usuario solo puede acceder a su propio documento.
    match /users/{userId} {
      allow read, update: if isSignedIn() && request.auth.uid == userId;
      allow create: if isSignedIn() && request.auth.uid == userId;
    }

    // Colección de compañías (/companies/{companyId})
    match /companies/{companyId} {
      // Un usuario puede leer los datos de su propia compañía.
      allow read, update: if isCompanyMember(companyId) && isAdmin();
      allow create: if isSignedIn();

      // Subcolección de productos (/companies/{companyId}/products/{productId})
      match /products/{productId} {
        // Cualquier miembro de la compañía puede consultar la lista de productos y leer uno específico.
        allow list, get: if isCompanyMember(companyId);
        
        // Solo los administradores pueden crear, actualizar o eliminar productos.
        allow create, update, delete: if isCompanyMember(companyId) && isAdmin();
      }
      
      // Subcolección de ventas (/companies/{companyId}/sales/{saleId})
      match /sales/{saleId} {
        // Cualquier miembro de la compañía puede consultar la lista y leer una venta específica.
        allow list, get: if isCompanyMember(companyId);
        
        // Cualquier miembro de la compañía puede crear una venta.
        allow create: if isCompanyMember(companyId);
        
        // Solo los administradores pueden actualizar o eliminar ventas.
        allow update, delete: if isCompanyMember(companyId) && isAdmin();
      }
    }
  }
}
