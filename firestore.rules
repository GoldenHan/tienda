
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    // Function to get the user's data from the /users collection
    // This can be used for READ operations
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Checks if the user's companyId from their user document matches the one in the path
    // Safe for READ operations
    function isCompanyMember(companyId) {
      return isSignedIn() && getUserData().companyId == companyId;
    }
    
    // Checks if the user has a specific role
    // Safe for READ operations
    function isAdmin() {
      return isSignedIn() && getUserData().role == 'admin';
    }

    // --- Rules ---

    // The /users collection stores authorization info (role, companyId) for each user.
    match /users/{userId} {
      // A user can read their own document to get their role and companyId.
      allow read: if isSignedIn() && request.auth.uid == userId;
      // A user can create their own document during sign-up.
      allow create: if isSignedIn() && request.auth.uid == userId;
      // A user can update their own document (e.g., change their name).
      allow update: if isSignedIn() && request.auth.uid == userId;
      // Users cannot delete their own auth record.
      allow delete: if false;
    }

    // The /companies collection contains a document for each business.
    match /companies/{companyId} {
      // An admin can read their own company's document.
      allow read: if isAdmin() && isCompanyMember(companyId);
      // A user can create a company document if they are the admin specified in the document.
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.adminUid;
      // Only an admin of that company can update the company details.
      allow update: if isAdmin() && isCompanyMember(companyId);
      allow delete: if false;

      // --- Subcollections ---

      match /products/{productId} {
        // Any member of the company can view the list of products.
        allow list, get: if isCompanyMember(companyId);
        
        // Only admins of the company can create, update, or delete products.
        // We validate against the existing company document, which is allowed in writes.
        allow write: if isSignedIn() && get(/databases/$(database)/documents/companies/$(companyId)).data.adminUid == request.auth.uid;
      }

      match /sales/{saleId} {
        // Any member of the company can view sales. UI will filter what is shown.
        allow list, get: if isCompanyMember(companyId);
        
        // Any member of the company can create a sale.
        allow create: if isCompanyMember(companyId);
        
        // Only admins can update or delete a sale record.
        // This rule is secure because it doesn't use get() in a write operation. It checks the request data.
        allow update, delete: if isAdmin() && isCompanyMember(companyId);
      }
    }
  }
}

    