rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helpers ---
    function isRole(role) {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && userDoc.data.role == role;
    }
    
    // --- Rules ---
    match /users/{userId} {
      // Allow list for initial setup check
      allow list: if true; 
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      // create is handled by server-side admin logic
      allow create: if true;
    }
    
    match /company/{docId} {
        allow read: if request.auth != null;
        // create, update, delete handled by server-side admin logic
        allow write: if true;
    }

    match /products/{productId} {
      allow read: if request.auth != null;
      allow write: if isRole('admin');
    }

    match /sales/{saleId} {
      allow read: if request.auth != null;
      allow create: if isRole('admin') || isRole('employee');
      allow update: if isRole('admin');
      allow delete: if false; // Deletes are not allowed from client
    }
  }
}
