rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isCompanyMember(companyId) {
      return isSignedIn() && getUserData().companyId == companyId;
    }
    
    function isRole(role) {
       return isSignedIn() && getUserData().role == role;
    }

    // --- Root Collections ---

    // USERS: 
    // - Anyone can create their own user document (during sign-up).
    // - A user can read/update their own data.
    // - Admins can read user data within their own company.
    match /users/{userId} {
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow read, update: if isSignedIn() && request.auth.uid == userId;
      allow list: if isRole('admin'); // Admins can list users for management.
    }

    // COMPANIES:
    // - Any signed-in user can create a company (initial registration).
    // - Only company members can read their own company's data.
    // - Only admins can update their company's data.
    match /companies/{companyId} {
      allow create: if isSignedIn();
      allow get: if isCompanyMember(companyId);
      allow update: if isCompanyMember(companyId) && isRole('admin');
    }

    // --- Subcollections ---

    // PRODUCTS:
    // - Admins can create, update, and delete products.
    // - All company members can read the product list and individual products.
    match /companies/{companyId}/products/{productId} {
      allow list: if isCompanyMember(companyId);
      allow get: if isCompanyMember(companyId);
      allow create, update, delete: if isCompanyMember(companyId) && isRole('admin');
    }

    // SALES:
    // - Admins and employees can create sales.
    // - Admins can read, update, and delete sales.
    // - Employees can only read sales (but create them via POS).
    match /companies/{companyId}/sales/{saleId} {
       allow list, get: if isCompanyMember(companyId);
       allow create: if isCompanyMember(companyId) && (isRole('admin') || isRole('employee'));
       allow update, delete: if isCompanyMember(companyId) && isRole('admin');
    }
  }
}
