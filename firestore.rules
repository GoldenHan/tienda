rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isUserInCompany(companyId, userId) {
      return exists(/databases/$(database)/documents/companies/$(companyId)/users/$(userId));
    }

    function getUserData(companyId, userId) {
      return get(/databases/$(database)/documents/companies/$(companyId)/users/$(userId)).data;
    }

    function isAdmin(companyId) {
      // Check if user is authenticated, part of the company, and has the 'admin' role.
      return isAuthenticated() 
        && isUserInCompany(companyId, request.auth.uid) 
        && getUserData(companyId, request.auth.uid).role == 'admin';
    }

    function isEmployee(companyId) {
      // Check if user is authenticated and part of the company.
      return isAuthenticated() && isUserInCompany(companyId, request.auth.uid);
    }

    // Root collection for user-to-company lookup
    match /users/{userId} {
      // A user can read their own lookup document to find their companyId.
      allow read: if isAuthenticated() && request.auth.uid == userId;
      // A user can create their own lookup document during registration.
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Main collection for all company data
    match /companies/{companyId} {
      // Allow a user to create a company if they are authenticated and set themselves as the admin.
      // This rule does not depend on get/exists, so it works within a transaction.
      allow create: if isAuthenticated() && request.resource.data.adminUid == request.auth.uid;
      
      // Allow employees to read their company's data.
      allow read: if isEmployee(companyId);

      // Only admins can update company information.
      allow update: if isAdmin(companyId);

      // Deleting companies is not allowed.
      allow delete: if false;

      // Subcollections within a company
      match /users/{userId} {
        // Allow creating a user if:
        // 1. The user is creating themselves as the first admin. (for registration)
        // 2. An existing admin is creating a new user (employee).
        allow create: if (isAuthenticated() && request.auth.uid == userId && request.resource.data.role == 'admin') || isAdmin(companyId);
        
        // Employees can read user data within their own company.
        allow read: if isEmployee(companyId);
        
        // An admin can update any user, or a user can update their own profile.
        allow update: if isAdmin(companyId) || (isAuthenticated() && request.auth.uid == userId);
        
        // An admin can delete any user except themselves.
        allow delete: if isAdmin(companyId) && request.auth.uid != userId;
      }

      match /products/{productId} {
        // Employees can view products.
        allow read: if isEmployee(companyId);
        // Only admins can manage the product inventory.
        allow create, update, delete: if isAdmin(companyId);
      }

      match /sales/{saleId} {
        // Employees can view sales history.
        allow read: if isEmployee(companyId);
        // Employees (e.g., at the POS) can create new sales.
        allow create: if isEmployee(companyId);
        // Only admins can modify or delete sales records.
        allow update, delete: if isAdmin(companyId);
      }
    }
  }
}
