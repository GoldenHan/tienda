service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isUserInCompany(companyId, userId) {
      return exists(/databases/$(database)/documents/companies/$(companyId)/users/$(userId));
    }

    function getUserData(companyId, userId) {
      return get(/databases/$(database)/documents/companies/$(companyId)/users/$(userId)).data;
    }

    function isAdmin(companyId) {
      return isAuthenticated() && isUserInCompany(companyId, request.auth.uid) && getUserData(companyId, request.auth.uid).role == 'admin';
    }

    function isEmployee(companyId) {
      return isAuthenticated() && isUserInCompany(companyId, request.auth.uid);
    }

    // =========================
    // Companies
    // =========================
    match /companies/{companyId} {

      // Allow creation of a company if the authenticated user is the admin
      allow create: if isAuthenticated() && request.resource.data.adminUid == request.auth.uid;

      // Allow reading the company if the user is part of the company OR this is the first read (setup)
      allow read: if isEmployee(companyId) || (!exists(/databases/$(database)/documents/companies/$(companyId)/users/$(request.auth.uid)) && request.auth.uid == request.resource.data.adminUid);

      // Only admins can update company info
      allow update: if isAdmin(companyId);

      allow delete: if false;

      // =========================
      // Users subcollection
      // =========================
      match /users/{userId} {
        // Allow creation of the first admin user during setup
        allow create: if isAuthenticated() && request.auth.uid == userId && request.resource.data.role == 'admin';

        // Employees can read users in their company
        allow read: if isEmployee(companyId);

        // Admin or the user itself can update
        allow update: if isAdmin(companyId) || request.auth.uid == userId;

        // Only admin can delete other users
        allow delete: if isAdmin(companyId) && request.auth.uid != userId;
      }

      // =========================
      // Products
      // =========================
      match /products/{productId} {
        allow read: if isEmployee(companyId);
        allow create, update, delete: if isAdmin(companyId);
      }

      // =========================
      // Sales
      // =========================
      match /sales/{saleId} {
        allow read: if isEmployee(companyId);
        allow create: if isEmployee(companyId);
        allow update, delete: if isAdmin(companyId);
      }
    }
  }
}
