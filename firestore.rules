rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      // Returns the user's data from the root /users collection
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isCompanyMember(companyId) {
      // Checks if the user belongs to the specified company
      return isSignedIn() && getUserData().companyId == companyId;
    }

    function isRole(role) {
      // Checks if the user has a specific role (e.g., 'admin')
      return isSignedIn() && getUserData().role == role;
    }

    // --- Rules for Root Collections ---

    // USERS collection (/users/{userId})
    // Stores the lookup info (role, companyId) for each user.
    match /users/{userId} {
      // Allow a user to read their own lookup data.
      allow read: if isSignedIn() && request.auth.uid == userId;
      // Allow a user to create their own lookup document during registration.
      allow create: if isSignedIn() && request.auth.uid == userId;
      // Prevent updates by clients to avoid privilege escalation.
      allow update, delete: if false;
    }

    // COMPANIES collection (/companies/{companyId})
    // Contains all data for a specific company.
    match /companies/{companyId} {
      // Allow a user to create a company document during registration.
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.adminUid;
      // Allow a member of the company to read the main company document.
      allow read: if isCompanyMember(companyId);
      // Allow only admins to update company details.
      allow update: if isRole('admin') && isCompanyMember(companyId);
      // Prevent deletion of company documents from the client.
      allow delete: if false;

      // PRODUCTS subcollection (/companies/{companyId}/products/{productId})
      match /products/{productId} {
        // Allow company members to read products.
        // The check for 'initialized' is to prevent errors on empty collections.
        allow read: if isCompanyMember(companyId);
        // Allow only admins of the company to create, update, and delete products.
        allow create, update, delete: if isRole('admin') && isCompanyMember(companyId);
      }

      // SALES subcollection (/companies/{companyId}/sales/{saleId})
      match /sales/{saleId} {
        // Allow only admins to read the full sales history.
        allow read: if isRole('admin') && isCompanyMember(companyId);
        // Allow any company member (admin or employee) to create a sale.
        allow create: if isCompanyMember(companyId);
        // Allow only admins to update or delete sale records.
        allow update, delete: if isRole('admin') && isCompanyMember(companyId);
      }
      
      // USERS subcollection (within a company) - This is for user profiles, not auth.
      // This was part of the original structure but is less critical than the root /users.
      // We will allow admins to manage these profiles.
       match /users/{userId} {
         allow read, write: if isRole('admin') && isCompanyMember(companyId);
       }
    }
  }
}