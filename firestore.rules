rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    // Reads the user's document from the /users collection
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Checks if the user's companyId in their user document matches the companyId in the path
    function isCompanyMember(companyId) {
      return isSignedIn() && getUserData().companyId == companyId;
    }

    // Checks if the user has a specific role
    function isRole(role) {
      return isSignedIn() && getUserData().role == role;
    }
    
    // --- Collection Rules ---

    // The /users collection stores the role and companyId for each user.
    // This is the source of truth for authorization.
    match /users/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if false; // Do not allow users to delete their own account document
    }

    // The /companies collection contains company-specific data.
    // Subcollections like /products and /sales live under each company document.
    match /companies/{companyId} {
      // Allow reading the company document if the user is a member of that company.
      allow read: if isCompanyMember(companyId);

      // Only authenticated users can create a company document, and they must be the admin.
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.adminUid;

      // Only admins of that company can update company details.
      allow update: if isRole('admin') && isCompanyMember(companyId);
      
      allow delete: if false; // Do not allow deleting company documents.

      // --- Subcollection Rules ---

      // Products subcollection
      match /products/{productId} {
        // Allow any company member to list and read individual products.
        // Separating list and get is crucial to allow collection queries.
        allow list, get: if isCompanyMember(companyId);
        
        // Only admins of the company can create, update, or delete products.
        allow create, update, delete: if isRole('admin') && isCompanyMember(companyId);
      }
      
      // Sales subcollection
      match /sales/{saleId} {
         // Allow any company member to list and read individual sales.
        allow list, get: if isCompanyMember(companyId);
        
        // Any employee or admin of the company can create a new sale.
        allow create: if isCompanyMember(companyId);
        
        // Only admins can modify or delete existing sale records.
        allow update, delete: if isRole('admin') && isCompanyMember(companyId);
      }
    }
  }
}
