rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =========================
    // Helpers
    // =========================
    function isAuthenticated() {
      return request.auth != null;
    }

    function isUser(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }

    function getUserRole(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.role;
    }

    function isAdmin() {
      return isAuthenticated() && getUserRole(request.auth.uid) == 'admin';
    }

    // =========================
    // Users collection
    // =========================
    match /users/{userId} {
      // Lectura: cualquier usuario autenticado puede leer usuarios
      allow read: if isAuthenticated();

      // Crear: cualquier usuario puede crear su propio doc
      allow create: if isAuthenticated() && request.auth.uid == userId;

      // Admin puede crear otros usuarios (empleados)
      allow create: if isAdmin();

      // Actualizar: solo el usuario mismo o admin
      allow update: if isUser(userId) || isAdmin();

      // Eliminar: solo admin
      allow delete: if isAdmin();
    }

    // =========================
    // Company (un solo documento)
    // =========================
    match /company/info {
      allow read: if isAuthenticated();

      // Solo admin puede crear la empresa
      allow create: if isAdmin() && !exists(/databases/$(database)/documents/company/info);

      // Solo admin puede actualizar
      allow update: if isAdmin();

      // Nunca se puede eliminar
      allow delete: never;
    }

    // =========================
    // Products collection
    // =========================
    match /products/{productId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }

    // =========================
    // Sales collection
    // =========================
    match /sales/{saleId} {
      // Lectura y creación: cualquier usuario autenticado
      allow read, create: if isAuthenticated();

      // Actualización y eliminación: solo admin
      allow update, delete: if isAdmin();
    }

    // =========================
    // Cart history collection
    // =========================
    match /cartHistory/{cartId} {
      // Lectura: cualquier usuario autenticado
      allow read: if isAuthenticated();

      // Solo admin puede crear, actualizar o borrar historial
      allow create, update, delete: if isAdmin();
    }
  }
}
