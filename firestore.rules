rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to get the user's data from the /users collection.
    // This can ONLY be used in `allow read` and `allow list` rules.
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Helper function to check the user's role.
    function isRole(role) {
      return getUserData().role == role;
    }
    
    // Helper function to check if the user belongs to the specified company.
    function isCompanyMember(companyId) {
      return getUserData().companyId == companyId;
    }

    // Users can only read and write their own user document.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Companies can be created by any authenticated user during registration.
    // Company data can only be read by members of that company.
    // Company data can only be updated by an admin of that company.
    match /companies/{companyId} {
      allow create: if request.auth != null;
      allow read: if isCompanyMember(companyId);
      allow update: if isCompanyMember(companyId) && isRole('admin');

      // --- Subcollections ---

      // Products
      match /products/{productId} {
        // `list` allows fetching the collection. `get` allows fetching a single doc.
        allow list: if isCompanyMember(companyId);
        allow get: if isCompanyMember(companyId);
        
        // Writing is only allowed for admins. No `get()` calls are used here.
        allow create, update, delete: if request.auth.uid != null &&
                                          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' &&
                                          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId;
      }
      
      // Sales
      match /sales/{saleId} {
        allow list: if isCompanyMember(companyId);
        allow get: if isCompanyMember(companyId);

        // Admins and employees can create sales. Only admins can update them.
        allow create: if request.auth.uid != null &&
                        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
                         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'employee') &&
                        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId;

        allow update: if request.auth.uid != null &&
                        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' &&
                        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId;
        
        // Sales are not deletable through the client.
        allow delete: if false;
      }
    }
  }
}
